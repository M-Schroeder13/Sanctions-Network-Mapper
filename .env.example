# Sanctions Network Mapper Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (optional but recommended)
# =============================================================================

# UK Companies House - Get free key at:
# https://developer.company-information.service.gov.uk/
UK_COMPANIES_HOUSE_API_KEY=

# OpenCorporates - Get key at:
# https://opencorporates.com/api_accounts/new
OPENCORPORATES_API_KEY=

# =============================================================================
# Entity Resolution Settings
# =============================================================================

# Fuzzy match threshold (0-100, higher = stricter)
NAME_MATCH_THRESHOLD=85
ADDRESS_MATCH_THRESHOLD=80

# =============================================================================
# Database Configuration (optional - for production use)
# =============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=sanctions_network

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO
